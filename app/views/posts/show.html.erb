<%= turbo_frame_tag "post-modal" do %>
    <%= turbo_stream_from "posts" %>

    <div class="post__header">
        <div></div>
        <h1><%= @post.creator.profile.first_name %>'s Post</h1>
        <button data-action="modal#close">X</button>
    </div>

    <%= render "post", post: @post, user: current_user, show_page: true %>

    <%= link_to "Back", :back, data: { action: "modal#close" } %>
<% end %>