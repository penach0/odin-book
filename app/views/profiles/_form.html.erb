<%= form_with model: [user, profile] do |f| %>
    <%= render "shared/form_errors", model: profile %>

    <%= f.label :first_name %>
    <%= f.text_field :first_name %>

    <%= f.label :last_name %>
    <%= f.text_field :last_name %>

    <%= f.label :date_of_birth %>
    <%= f.date_field :date_of_birth %>

    <%= f.label :bio %>
    <%= f.text_area :bio %>

    <%= f.submit %>
<% end %>

<% if profile.required_info? %>
    <%= link_to "Edit later", users_path %>
<% end %>